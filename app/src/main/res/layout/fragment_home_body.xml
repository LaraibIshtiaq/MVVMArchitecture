<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:gravity="center_horizontal"
    tools:context=".views.HomeBodyFragment">

    <TextView
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Dr.ink"
        android:textColor="@color/primary"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/AppLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Your drink assistance"
        android:textColor="@color/sub_primary"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/home_body"/>

    <TextView
        android:id="@+id/AppLabel2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="We will remind you to drink everyday to keep you healthy  "
        android:textColor="@color/sub_primary"
        android:textAlignment="center"
        android:textSize="18dp" />

    <Button
        android:id="@+id/get_started_button"
        android:onClick="onClickStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textAllCaps="false"
        android:background="@drawable/get_started_button"
        android:textColor="@color/white"
        android:layout_marginTop="20sp"/>

</LinearLayout>